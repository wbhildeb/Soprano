{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "require-atomic-updates": "off",
    "brace-style": [
      "error",
      "allman",
      { "allowSingleLine": true }
    ],
    "indent": [
      "error",
      2
    ],
    "no-constant-condition": [
      "error",
      { "checkLoops": false }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "warn"
  }
}
